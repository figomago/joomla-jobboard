<?xml version="1.0" encoding="iso-8859-1"?>
<install version="1.5" method="upgrade" type="plugin" group="user">
    <name>Job Board - User Sync</name>
	<author>figomago.wordpress.com</author>
    <authorEmail>figo.mago@gmail.com</authorEmail>
	<creationDate>Apr 2012</creationDate>
	<copyright>Copyright (c) 2010 - 2013 Tandolin Consultants cc/Figomago.</copyright>
	<authorUrl>figomago.wordpress.com</authorUrl>
	<version>1.0.0</version>
	<license>GNU/GPL v3 or later</license>
    <description>PLG_USER_JOBBOARD_USER_SYNC_DESCRIPTION</description>
    <files>
        <filename plugin="jobboard_usersync">jobboard_usersync.php</filename>
		<filename>index.html</filename>
    </files>
    <languages>
      <language tag="en-GB">languages/en-GB.plg_jobboard_usersync.ini</language>
		<language tag="en-GB">languages/en-GB.plg_jobboard_usersync.sys.ini</language>
    </languages>
    <params>
        <param name="user_status" type="radio" default="1" label="COM_JOBBOARD_USERSYNC_ENABLE_USER" description="COM_JOBBOARD_USERSYNC_ENABLE_USER_DESCRIPTION">
			<option value="1">COM_JOBBOARD_USERSYNC_YES</option>
			<option value="0">COM_JOBBOARD_USERSYNC_NO</option>
		</param>
    </params>
    <config>
		<fields name="params">
			<fieldset name="basic">
                <field name="user_status" type="radio" default="1" label="COM_JOBBOARD_USERSYNC_ENABLE_USER" description="COM_JOBBOARD_USERSYNC_ENABLE_USER_DESCRIPTION">
					<option value="1">COM_JOBBOARD_USERSYNC_YES</option>
			        <option value="0">COM_JOBBOARD_USERSYNC_NO</option>
				</field>
            </fieldset>
        </fields>
    </config>
</install>